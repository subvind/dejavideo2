<div class="px-4 py-10 sm:px-6 sm:py-28 lg:px-8 xl:px-28 xl:py-32">
  <div class="mx-auto max-w-xl lg:mx-0">
    <div class="flex items-center gap-1 pb-4 border-b border-zinc-100">
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-zinc-100">
        <svg viewBox="0 0 24 24" fill="none" class="w-6 h-6">
          <path
            d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </div>
      <div>
        <h2 class="text-[2rem] font-semibold text-zinc-900">RRABBIT</h2>
        <p class="text-xl text-zinc-500">https://rrabbitmusic.com</p>
      </div>
    </div>
    <div class="flex">
      <div class="w-full sm:w-auto">
        <div class="mt-2 mb-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-3">
          <a
            href="/upload"
            class="group relative rounded-2xl px-6 py-4 text-sm font-semibold leading-6 text-zinc-900 sm:py-6"
          >
            <span class="absolute inset-0 rounded-2xl bg-zinc-50 transition group-hover:bg-zinc-100 sm:group-hover:scale-105">
            </span>
            <span class="relative flex items-center gap-4 sm:flex-col">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" className="h-6 w-6">
                {/* Video Player Icon */}
                <rect x="2" y="4" width="20" height="16" rx="2" stroke="#18181B" strokeWidth="2" />
                <path d="M10 9l6 3-6 3V9z" fill="#18181B" fillOpacity=".15" stroke="#18181B" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" />
              </svg>
              Upload
            </span>
          </a>
          <a
            href="/collection"
            class="group relative rounded-2xl px-6 py-4 text-sm font-semibold leading-6 text-zinc-900 sm:py-6"
          >
            <span class="absolute inset-0 rounded-2xl bg-zinc-50 transition group-hover:bg-zinc-100 sm:group-hover:scale-105">
            </span>
            <span class="relative flex items-center gap-4 sm:flex-col">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" className="h-6 w-6">
                {/* Collection/Gallery Icon */}
                <path d="M4 4h4v4H4V4z" stroke="#18181B" strokeWidth="2" />
                <path d="M10 4h4v4h-4V4z" stroke="#18181B" strokeWidth="2" />
                <path d="M16 4h4v4h-4V4z" stroke="#18181B" strokeWidth="2" />
                <path d="M4 10h4v4H4v-4z" stroke="#18181B" strokeWidth="2" />
                <path d="M10 10h4v4h-4v-4z" fill="#18181B" fillOpacity=".15" stroke="#18181B" strokeWidth="2" />
                <path d="M16 10h4v4h-4v-4z" stroke="#18181B" strokeWidth="2" />
                <path d="M4 16h4v4H4v-4z" stroke="#18181B" strokeWidth="2" />
                <path d="M10 16h4v4h-4v-4z" stroke="#18181B" strokeWidth="2" />
                <path d="M16 16h4v4h-4v-4z" stroke="#18181B" strokeWidth="2" />
              </svg>
              Collection
            </span>
          </a>
          <a
            href={"/playlists"}
            class="group relative rounded-2xl px-6 py-4 text-sm font-semibold leading-6 text-zinc-900 sm:py-6"
          >
            <span class="absolute inset-0 rounded-2xl bg-zinc-50 transition group-hover:bg-zinc-100 sm:group-hover:scale-105">
            </span>
            <span class="relative flex items-center gap-4 sm:flex-col">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" className="h-6 w-6">
                {/* Playlist Icon */}
                <rect x="4" y="5" width="16" height="2" fill="#18181B" />
                <rect x="4" y="11" width="16" height="2" fill="#18181B" />
                <rect x="4" y="17" width="12" height="2" fill="#18181B" />
                <circle cx="19" cy="18" r="2" fill="#18181B" fillOpacity=".15" stroke="#18181B" strokeWidth="2" />
              </svg>
              Playlists
            </span>
          </a>
          <a
            href="/channels"
            class="group relative rounded-2xl px-6 py-4 text-sm font-semibold leading-6 text-zinc-900 sm:py-6"
          >
            <span class="absolute inset-0 rounded-2xl bg-zinc-50 transition group-hover:bg-zinc-100 sm:group-hover:scale-105">
            </span>
            <span class="relative flex items-center gap-4 sm:flex-col">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" className="h-6 w-6">
                {/* Channels Icon */}
                <path d="M4 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v2a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7z" stroke="#18181B" strokeWidth="2" />
