                <circle cx="12" cy="8" r="4" stroke="#18181B" strokeWidth="2" />
                <path d="M20 21c0-4.418-3.582-8-8-8s-8 3.582-8 8" stroke="#18181B" strokeWidth="2" />
                <path d="M4 21h16" stroke="#18181B" strokeWidth="2" />
              </svg>
              Members
            </span>
          </a>
          <a
            href="/station"
            class="group relative rounded-2xl px-6 py-4 text-sm font-semibold leading-6 text-zinc-900 sm:py-6"
          >
            <span class="absolute inset-0 rounded-2xl bg-zinc-50 transition group-hover:bg-zinc-100 sm:group-hover:scale-105">
            </span>
            <span class="relative flex items-center gap-4 sm:flex-col">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" className="h-6 w-6">
                {/* Station Icon */}
                <path d="M5 5l14 14" stroke="#18181B" strokeWidth="2" />
                <path d="M19 5l-14 14" stroke="#18181B" strokeWidth="2" />
                <circle cx="12" cy="12" r="3" fill="#18181B" fillOpacity=".15" stroke="#18181B" strokeWidth="2" />
                <circle cx="12" cy="12" r="7" stroke="#18181B" strokeWidth="2" />
              </svg>
              Station
            </span>
          </a>
        </div>
      </div>
    </div>
    <.link
      href={~p"/djs"}
      class="bg-black text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition"
